{
  "moduleFileExtensions": ["js", "json", "ts"],
  "rootDir": ".",
  "testEnvironment": "node",
  "testRegex": ".e2e-spec.ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "setupFilesAfterEnv": ["./jest-e2e.setup.js"],
  "moduleNameMapper": {
    "^src/infrastructure/database/database.module$": "<rootDir>/test-utils/mock-database.module.ts"
  },
  "testTimeout": 30000
}
